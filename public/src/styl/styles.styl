.object_block
  width 240px
  height 220px
  background-size cover
  background-position center
  font-size 18px
  display block
  float left
  background-color #ececec
  text-decoration none
  margin-right 20px
  margin-bottom 20px
  position relative
  &:after
    display block
    position absolute
    top 0
    height 100%
    width 100%
    left 0
    content ''
    background #fff
    opacity 0.2
    transition: opacity 0.1s ease;
  &:nth-child(5n)
    margin-right 0px
  &:hover .object_description
    color red
  &:hover:after
    opacity 0

.object_description
  font-size 16px
  line-height 18px
  position relative
  top 100%

.object_date
  font-size 16px

.object_description_inner
  width 100%
  background-color white
  position absolute
  bottom 0
  z-index 900

.object_title
  padding-top 3px
  overflow hidden
  white-space normal
