.navigate_block
	width 1280px
	margin 10px auto
	background-color white
	z-index 999999
	height 45px

.navigate_styles_block
	white-space nowrap
	font-size 0
	width 1280px
	overflow-y hidden
	height 70px
	-webkit-overflow-scrolling touch

.navigate_styles_inner
	display inline-block
	height 60px
	overflow hidden

.navigate_style_block
	display inline-block
	position relative

.navigate_style_title
	cursor pointer
	margin-right 35px
	font-size 24px
	&.not_sub
		color #aeaeae
	&.current
		color red
	&:hover
		color red
	&:after
		content '>'
		color black
		font-size 21px
		position absolute
		right 14px
		top 1px

.navigate_style_progress
	margin-top 5px
	margin-bottom 3px
	height 2px
	background-color red
	width 0%
	&.on_scroll
		&:after
			display block
			margin-top -1.7px
			float right
			content ''
			width 6px
			height 6px
			border-radius 6px
			background-color red

.navigate_style_progress_outer
	left 32px
	right 32px
	position absolute
	z-index 100000
	top -2px

.navigate_style_inner
	position relative
	width 100%
	& .navigate_style_inner_ages
		left 0
		right 0px
		position absolute
		top 4px
		border-top 1px solid
		 & span
			position absolute
			background #fff
			top -9px
			font-size 12px
			display block
			padding 0 7px
			&.end_age
				right 0
				padding-right 0
			&.start_age
				left 0
				padding-left 0

.navigate_style_ages
	display none
	position absolute
	white-space nowrap
	font-size 0
	left 0
	top 11px

.navigate_style_ages_inner
	position relative
	display inline-block

.navigate_age
	display inline-block
	cursor pointer
	margin-right 10px
	font-size 18px
	color #333
	&.current
		color red
	&:hover
		color red

.styles_block
	white-space nowrap
	overflow hidden
	width 1280px
	position absolute
	left 50%
	margin-left -640px
	bottom 25px
	top 115px

.styles_inner, .style_block, .style_block_inner
	display inline-block
	vertical-align top
	font-size 0
	height: 100%

.style_block
	overflow hidden
	width 1280px

.style_block_inner
	overflow auto
	width 1300px
	-webkit-overflow-scrolling touch

.style_inner_height
	overflow hidden

.age_block
	overflow hidden
	min-height 300px  // !!!!!!!!!!!!!!

