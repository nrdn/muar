.navigate_block
  width 1280px
  margin 10px auto
  background-color white
  z-index 999999

.navigate_styles_block
  overflow hidden

.navigate_style_block
  float left

.navigate_style_title
  cursor pointer
  margin-right 15px
  font-size 24px
  &.current
    color red
  &:hover
    color red

.navigate_style_progress
  margin-top 3px
  height 2px
  background-color red
  width 0%

.navigate_style_ages
  display none
  position absolute

.navigate_age
  float left
  cursor pointer
  margin-right 10px
  font-size 18px
  &.current
    color red
  &:hover
    color red

.styles_block
  white-space nowrap
  overflow hidden
  width 1280px
  position absolute
  left 50%
  margin-left -640px
  bottom 0
  top 110px

.styles_inner, .style_block, .style_block_inner
  display inline-block
  vertical-align top
  font-size 0
  height: 100%

.style_block
  overflow hidden
  width 1280px

.style_block_inner
  overflow auto
  width 1300px

.style_inner_height
  overflow hidden

.age_block
  overflow hidden

.age_header
  text-align center
  padding-bottom 10px

.age_title
  padding-left 5px
  padding-right 5px
  font-size 18px
  background-color white
  display inline-block
  position relative
  z-index 9999

.age_line
  position relative
  background-color black
  top 12px
  width 100%
  height 1px

.object_block
  width 240px
  height 220px
  background-size cover
  background-position center
  font-size 18px
  display block
  float left
  // outline 1px solid red
  text-decoration none
  margin-right 20px
  margin-bottom 20px
  &:nth-child(5n)
    margin-right 0px
  &:hover .object_description
    color red

.object_description
  font-size 16px
  line-height 18px
  position relative
  top 100%

.object_date
  font-size 16px

.object_description_inner
  width 100%
  background-color white
  position absolute
  bottom 0

.object_title
  padding-top 3px
  overflow hidden
  white-space normal
  // hyphens auto

.style_title
  white-space normal
  font-size 24px
  margin-bottom 10px
  text-align center

.style_description
  width 1280px
  margin-bottom 10px
  position relative
  color black
  white-space normal
  font-size 16px
  hyphens auto