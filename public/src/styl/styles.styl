html, body
	height 100%
	min-width 1000px

body
	&.load
		background url("/images/design/loader.gif") 50% no-repeat
		background-size 200px

.menu_item
.menu_navigate_block a
.navigate_style_title
.navigate_age
.logo_description
	color #fff

.header_block_inner
	background transparent

.styles_fixed
	.menu_item
	.menu_navigate_block a
	.navigate_style_title
	.navigate_age
	.logo_description
		color #000
		border-color #ccc
	.navigate_style_title
		&.current
			border-color #000
			color #fff
			background #000
		&:hover
			border-color #b3b3b3
			color #fff
			background #b3b3b3
	.header_block_inner
		background #fff
		&:after
			position absolute
			content ''
			display block
			top 0
			right 0
			background #fff
			width 100%
			height 100px
			z-index -1
			box-shadow 0 2px 8px rgba(204, 204, 204, 0.49)

.header_block
	left 40px
	right 40px
	width auto!important
	top 0
	position absolute
	z-index 10000
	overflow hidden
	min-width 960px

.header_block_inner
	background transparent
	color #fff

.content_title_block
	left 40px
	right 40px
	position absolute
	z-index 100000
	min-width 960px
	height auto
	top 40px
	min-height 70px
	max-height 70px
	width auto

.content_title_block.styles_fixed
	overflow visible

.styles_inner_block
.navigate_styles_block
	width 100%
	max-width 1280px


.top_navigate.navigate_block
	margin 0px auto
	z-index 999999
	margin-top 10px
	height 31px
	max-width 1310px
	width 100%
	&.styles_fixed
		background #fff


.style_navigate.navigate_block
	width 100%
	margin 0px auto
	z-index 999999
	height 100%
	&.styles_fixed
		display none


.style_navigate .navigate_style_title
	visibility hidden
	display none
	color transparent
	&:hover
		color transparent

.navigate_block_inner
	//position absolute
	//top 50%
	//top 0
	//z-index 1000
	width 100%
	//margin-top 82px
	//padding-top 13px
	//margin-top -50px
	padding 0
	&.styles_fixed
		position static
		margin 0
		padding 0

.navigate_styles_block
	margin 0 auto
	display table

.navigate_style_block
	display table-cell

.navigate_style_inner
	position relative

.navigate_style_title
	cursor pointer
	border-bottom 1px solid #9E9D9D
	border-top 1px solid #9E9D9D
	position relative
	padding-bottom 3px
	padding-top 3px
	font 20px/22px 'ma_unitwlight'
	text-align center
	&.current
		//color red
		border-color #fff
		color #333
		background #fff
	&:hover
		border-color #fff
		color #333
		background #fff

