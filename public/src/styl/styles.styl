.navigate_style_progress
	display none
	position absolute
	top 24px
	margin-bottom 3px
	height 1px
	margin-left 3px
	background-color red
	width 0%
	&.on_scroll
		&:after
			display block
			margin-top 0px
			float right
			content '•'
			font-size 26px
			line-height 5px
			color #f00

.navigate_style_ages
	display none
	position absolute
	white-space normal
	top 155px
	left 0
	width 100%
	line-height 26px
	z-index -1000
	&.styles_fixed
		top 17px
		.navigate_style_ages_inner
			//background #fff
			background #E4E4E4
			box-shadow 0 2px 8px rgba(204, 204, 204, 0.49)
			padding-top 27px
			padding-bottom 4px

.navigate_style_ages_inner
	margin 0 auto
	text-align center
	overflow hidden
	max-width 1310px

.navigate_age
	display inline-block
	cursor pointer
	font-size 20px
	//line-height 30px
	color #fff
	padding 0 10px
	&.current
	&:hover
		color #000
		background #ccc
	&:last-child:after
		display none

.styles_fixed
	.navigate_age
		color #000
		&:hover
			color #fff
			background #c3c3c3
		&.current
			background #b3b3b3
			color #fff

body > .content_block
	margin 0 auto
	position relative
	height 100%
	min-width 1000px

.content_block
	width 100%

.styles_block
	white-space nowrap
	overflow hidden
	position absolute
	left 0
	bottom 0px
	top 0
	right 0
