html, body
	height 100%

.menu_item
.menu_navigate_block a
.navigate_style_title
.navigate_age
.logo_description
	color #fff

.styles_fixed
	background #fff
	.menu_item
	.menu_navigate_block a
	.navigate_style_title
	.navigate_age
	.logo_description
		color #000
	.navigate_style_title.current
		border-color #000

.header_block
	left 0
	top 0
	position absolute
	z-index 10000

.header_block_inner
	background transparent
	color #fff

.content_title_block
	width 100%
	position absolute
	top 0px
	z-index 100000
	min-width 1000px
	height 50%
	min-height 400px
	max-height 800px
	&.styles_fixed
		height auto
		top 40px

.styles_inner_block, .navigate_styles_block {
	width 100%
	max-width 1280px
}

.navigate_block
	width 100%
	margin 0px auto
	z-index 999999
	height 100%
	&.styles_fixed
		border-bottom 1px solid #ccc
		padding-top 10px
		height 55px

.navigate_styles_block
	margin 0 auto
	display table

.navigate_style_block
	display table-cell

.navigate_style_inner
	position relative

.navigate_style_title
	cursor pointer
	border-bottom 1px solid
	position relative
	padding-bottom 3px
	&.current
		color red
		border-color #fff
	&:hover
		color red
	&:after
		content '|'
		display block
		position absolute
		left 100%
		bottom -12px
		font-size 8px
		z-index 99999

.navigate_style_block:last-child .navigate_style_title:after
	content '>'
	bottom -12px
	font-size 14px

.navigate_style_progress
	position absolute
	top 24px
	margin-bottom 3px
	height 1px
	margin-left 3px
	background-color red
	width 0%
	&.on_scroll
		&:after
			display block
			margin-top 0px
			float right
			content '•'
			font-size 26px
			line-height 5px
			color #f00

.navigate_style_ages
	display none
	position absolute
	white-space nowrap
	top 40px
	left 0
	width 100%

.navigate_style_ages_inner
	margin 0 auto
	text-align center
	overflow hidden

.navigate_age
	display inline-block
	cursor pointer
	font-size 18px
	&:after
		content '∙'
		display inline-block
	&.current
		color red
	&:hover
		color red
	&:last-child:after
		display none

body > .content_block
	margin 0 auto
	position relative
	height 100%

.content_block
	width 100%

.styles_block
	white-space nowrap
	overflow hidden
	position absolute
	left 0
	bottom 0px
	top 0
	right 0
	&.screen_width_absolute
		margin-left 0

.styles_inner, .style_block, .style_block_inner
	display inline-block
	vertical-align top
	font-size 0
	height 100%
	width 100%

.age_date
	padding-bottom 7px
	font 40px/60px 'ma_unitwlight'

.style_block_background
	height: 100%
	background-position 50%
	background-size cover
	position relative
	&:after
		content ''
		top 0
		left 0
		width 100%
		height 100%
		display block
		position absolute
		//background url("/images/design/gr.png") 0 100% repeat-x
		//background-size 1px 290px
		//opacity 0.7
		background: rgba(0,0,0,0.4);

.style_block
	overflow hidden
	width 100%

.style_block_inner
	overflow auto
	//width 1300px
	width 105%
	width 100%
	-webkit-overflow-scrolling touch

.style_inner_height
	overflow hidden
	min-height 800px  // !!!!!!!!!!!!!!
	display block
	margin-bottom 100px

.age_block
	overflow hidden
	min-height 300px  // !!!!!!!!!!!!!!

body > .style_header
	height 100%

.style_header
	border-bottom 1px solid #d7d7d7
	height 50%
	min-height 400px
	max-height 800px4
.age_header
	margin-top 40px
	margin-bottom 10px
	border-bottom 1px solid #d7d7d7
	max-width 1280px
	margin 0 auto
	text-align center

.age_title
	font-size 24px
	display inline-block
	position relative
	font-family 'ma_unitwlight'
	line-height 24px
	font: 65px/95px 'ma_unitwmedium';
	text-align center
	max-width 950px

.style_title
	font 30px/32px 'ma_unitwlight'
	position: absolute
	top 50%
	width 100%
	z-index 9999
	margin-top -90px

.style_name
	border-bottom 1px solid #fff
	color #fff
	font 65px/95px 'ma_unitwmedium'
	text-align center

.style_date
	text-align center
	color #fff
	font 40px/60px 'ma_unitwlight'

