	&:after
		font-family ma_unitwlight
		font-size 22px
		background-color #fff
		display inline-block
		position relative
		font-family 'ma_unitwlight'
		line-height 32px

.style_date.date_age546f52adefcff44843391164:after
	content 'X–XVII вв.'

.style_date.date_age546f57ca1238740a476aa789:after
	content 'XVII–XVIII вв.'

.age_description
.style_description
	margin-bottom 55px
	position relative
	color black
	white-space normal
	font-size 20px
	line-height 25px
	& br
		content ''
		display block
		height 15px

.style_description_inner
.age_description_inner
	margin 100px auto
	width 850px

.age_description
	margin-bottom 25px

.age_objects
	margin 0 auto
	width 1280px

.object_block
	width 294px
	height 240px
	background-size cover
	background-position center
	font-size 18px
	display block
	float left
	background-color #ececec
	text-decoration none
	margin-right 20px
	margin-bottom 20px
	position relative
	&:nth-child(4n)
		margin-right 0px
	&:hover .object_description
		color #ee3124
	&[href='/objects/546b516bbe5f5200007cb8cd']
		& .object_description_inner
				color #ee3124

.object_description
	/*font-size 16px
	line-height 18px*/
	position relative
	top 100%

.object_date
	font-size 16px

.object_description_inner
	width 100%
	background-color white
	position absolute
	bottom 0
	z-index 900

.object_title
	padding-top 3px
	overflow hidden
	white-space normal



.footer_block
	font 14px/16px 'ma_unitwlight'

.footer_sponsors_block
	border-top 1px solid #d7d7d7
	padding 10px 25px 10px


