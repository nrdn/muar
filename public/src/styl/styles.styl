.navigate_block
  width 1280px
  margin 10px auto
  background-color white
  z-index 999999
  height 50px

.navigate_styles_block
  width 1272px
  margin 0 auto
  display table

.navigate_style_block
  //float left
  display table-cell
  position relative

.navigate_style_title
  cursor pointer
  //margin-right 15px
  font-size 24px
  text-align center
  margin 0 6px
  border-bottom 1px solid
  position relative
  padding-bottom 3px
  &.not_sub
    color #737373
  &.current
    color red
    border-color #333
  &:hover
    color red
  &:after
    content '•'
    display block
    position absolute
    left 100%
    bottom -13px
    margin-left 2px
    font-size 26px

.navigate_style_block:last-child .navigate_style_title:after
  content '>'
  bottom -11px

.navigate_style_block:first-child .navigate_style_title:before
  content '◦'
  display block
  position absolute
  right 100%
  bottom -12px
  margin-left 2px
  font-size 13px


.navigate_style_progress
  //margin-top 5px
  position absolute
  top 24px
  margin-bottom 3px
  height 1px
  margin-left 3px
  background-color red
  width 0%
  &.on_scroll
    &:after
      display block
      margin-top 0px
      float right
      content '•'
      font-size 26px
      line-height 5px
      color #f00

.navigate_style_ages
  display none
  position absolute
  white-space nowrap
  top 30px

.navigate_age
  //float left
  display inline-block
  cursor pointer
  margin-right 10px
  font-size 18px
  &.current
    color red
  &:hover
    color red

.styles_block
  white-space nowrap
  overflow hidden
  width 1280px
  position absolute
  left 50%
  margin-left -640px
  bottom 25px
  top 115px

.styles_inner, .style_block, .style_block_inner
  display inline-block
  vertical-align top
  font-size 0
  height: 100%

.style_block
  overflow hidden
  width 1280px

.style_block_inner
  overflow auto
  width 1300px
  -webkit-overflow-scrolling touch

.style_inner_height
  overflow hidden

