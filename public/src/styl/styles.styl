@media screen and (max-width:1280px) {
		.navigate_style_title {
			font-size: 20px;
		}
		.age_description, .style_description {
			width: 1000px;
		}
		.style_block_inner {
			width 1040px;
		}
		.object_block:nth-child(5n) {
				margin-right: 20px;
		}
		.object_block:nth-child(4n) {
				margin-right: 0px;
		}
}