	vertical-align top
	font-size 0
	height 100%
	width 100%

.age_date
	padding-bottom 7px
	font 40px/60px 'ma_unitwlight'

.style_block_background
	height: 100%
	background-position 50%
	background-size cover
	position relative
	&:after
		content ''
		top 0
		left 0
		width 100%
		height 100%
		display block
		position absolute
		//background url("/images/design/gr.png") 0 100% repeat-x
		//background-size 1px 290px
		//opacity 0.7
		background: rgba(0,0,0,0.4);

.style_block
	overflow hidden
	width 100%
	min-width 1000px

.style_block_inner
	overflow auto
	//width 1300px
	width 105%
	width 100%
	-webkit-overflow-scrolling touch

.style_inner_height
	overflow hidden
	min-height 800px  // !!!!!!!!!!!!!!
	display block
	margin-bottom 100px

.age_block
	overflow hidden
	min-height 300px  // !!!!!!!!!!!!!!

body > .style_header
	height 100%

