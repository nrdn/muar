.style_title
	display block
	text-decoration none
	font 30px/32px 'ma_unitwmedium'
	padding 0 0 10px
	text-align left

.age_title
	font-size: 24px;
	font-family: 'ma_unitwmedium';
	line-height: 24px;
	& .style_date
		padding-top 8px
		margin-top 8px

.age_line
.style_line
	position relative
	background-color black
	top 12px
	width 100%
	height 1px

.age_description
.style_description
	width 1280px
	margin-bottom 15px
	position relative
	color black
	white-space normal
	font-size 16px
	line-height 18px
	hyphens auto
	& br
		content ''
		display block
		height 15px
	
//.style_description
	//margin-top 100px

.style_date
	font-family 'ma_unitwlight'
	border-top 1px solid #d7d7d7
	margin-top 5px
	padding-top 5px

.age_description
	margin-bottom 25px

.object_block
	width 240px
	height 220px
	background-size cover
	background-position center
	font-size 18px
	display block
	float left
	background-color #ececec
	text-decoration none
	margin-right 20px
	margin-bottom 20px
	&:nth-child(5n)
		margin-right 0px
	&:hover .object_description
		color red

.object_description
	font-size 16px
	line-height 18px
	position relative
	top 100%

.object_date
	font-size 16px

.object_description_inner
	width 100%
	background-color white
	position absolute
	bottom 0

.object_title
	padding-top 3px
	overflow hidden
	white-space normal
