div, span, a, ul, li, h1, h2, h3
  margin 0
  padding 0

html, body
  margin 0
  padding 0
  // width 100%
  // height 100%
  color #333
  font 18px/21px 'ma_unitwlight'

*
  outline none

html, body, .content_block
  // height 100%

a
  color #333

.content_block
  width 1280px
  margin 0 auto

.header_block, .footer_block
  width 100%

.footer_block
  position fixed
  width 100%

.header_block_inner, .footer_block_inner
  width 1280px
  margin 0 auto

.header_block_inner
  height 35px
  position relative
  margin-top 10px
  background #fff

.styles_header_title_control
  width 1280px
  margin 0 auto
  height 30px
  border-bottom 2px solid #000

.styles_header_title
  font-size 23px
  text-align center
  line-height 29px

.header_logo
  width 178px
  height 34px
  display block
  background url('/images/design/logo.png') 0 0 no-repeat
  background-size 118px
  padding-left 140px
  font-size 11px
  padding-top 5px
  line-height 14px
  text-decoration none
  color #333

.navigation_block
  position absolute
  right 0
  top 9px
  text-align right

.navigation_block_options
  display block

.navigation_block_button
  display block
  border-top 2px solid #333
  width 30px
  margin-bottom 5px

.content_title_block
  width 100%

.content_title
  font-size 20px
  text-align center
  line-height 29px
