html, body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font: 11pt/13pt 'ma_unitwlight'

*
  outline: none

html, body, .content_block
  height: 100%

.content_block
  width: 1024px
  margin: 0 auto

.header_block, .footer_block
  width: 100%
  left: 0
  z-index: 20

.footer_block
  position: fixed

.header_block_inner, .footer_block_inner
  width: 1024px
  margin: 0 auto
  background-size: 1024px
  background-color: #fff

.header_block, .header_block_inner
  height: 75px

.header_block_inner
  background-image: none

.styles_header_title_control
  width: 1022px
  margin: 0 auto
  height: 30px
  border-bottom: 2px solid #000

.styles_header_title
  font-size: 23px
  text-align: center
  line-height: 29px

.top_line_block
  padding-top: 6px
  float: none
  width: 100%
  overflow: hidden
  height: 18px
  font-size: 0.97em
  letter-spacing: 0px

.top_menu_block
  float: left

.top_menu_block a
  padding-right: 22px
  color: #000

.top_menu_block a:hover
  text-decoration: none

.top_search_block
  float: right
  input
    width: 215px
    border none
    border-bottom: 1px solid #000
    outline none
  .search_logo
    width 20px
    height 15px
    float right
    background url('/images/design/icons/search.png') 50% no-repeat
    background-size contain

.header_logo
  width: 160px
  height: 50px
  margin: 0 auto
  display: block
  background: url("/images/design/logo.png") 50% no-repeat
  background-size: contain

.content_title_block
  width: 1022px
  margin: 0 auto
  height: 30px
  border-bottom: 2px solid #000

.content_title
  font-size: 23px
  text-align: center
  line-height: 29px
