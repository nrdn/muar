.menu_block
	position absolute
	right 0
	top 9px

.menu_item
	float left
	margin-left 5px
	font 26px/28px 'menu_icons'
	cursor pointer
	&.lang
		//margin-right 5px
	&:hover
		color red

.content_search_block
	position absolute
	background rgba(0,0,0,0.9);
	overflow hidden
	z-index 1000000
	width 100%
	display none
	top 0
	height 100%

.search_inner
	width 1280px
	padding-bottom 5px
	position relative
	margin 0px auto
	overflow hidden
	height 100%

.search_block
	position absolute
	top 40px
	width 100%

.search_title
	color #eee
	font 30px/32px 'ma_unitwmedium'
	padding 10px 0
	border-bottom 1px solid #d7d7d7
	width 100%

.search_field
	width 100%
	font-size 44px
	font-family ma_unitwlight
	border none
	margin 2px
	padding 0
	border-bottom 4px solid #eee
	display block
	background transparent
	color #eee
	margin-top 10px

.objects_context
.architects_context
.subjects_context
	display none
	overflow hidden
	float left
	margin-right 10px
	margin-bottom 10px

.search_result
	overflow hidden
	margin-top 16px

.search_cross
	position absolute
	top -20px
	right 0
	width 40px
	height 40px
	background url('/images/design/cross.png') 0 0
	background-size auto 40px
	cursor pointer

.search_cross:hover
	background-position 40px 0

.context_results_block
	display inline

.context_result
	color #eee
	text-decoration none
	margin-right 5px
	&:last-child
		margin-right 0px
		&:after
			content ''
	&:hover
		color red
	&:after
		margin-left 5px
		content '・'
		color #eee

.context_title
	font-size 18px
	float left
	margin-right 10px
	font-family ma_unitwmedium
	color #eee

.content_title_block
	width 100%
	overflow hidden
	font-size 22px
	line-height 21px
	width 1280px
	margin 0 auto

.sponsor_info
	margin-right 10px
	text-decoration none
	&:hover
		color red

.sponsor_date
	float right

