.menu_block
  position absolute
  right 0
  top 9px

.menu_item
  float left
  margin-left 5px
  font 26px/28px 'menu_icons'
  cursor pointer
  &.lang
    //margin-right 5px
  &:hover
    color red

.content_search_block
  position absolute
  background-color white
  overflow hidden
  z-index 100
  width 100%
  display none

.search_inner
  width 1280px
  padding-bottom 5px
  position relative
  margin 3px auto
  overflow hidden

.search_title
  font-size 24px
  float left
  margin-top 7px
  cursor pointer
  &:hover
    color red

.search_field
  width 1100px
  font-size 24px
  font-family ma_unitwlight
  border none
  margin 2px
  padding 0

.objects_context
.architects_context
.subjects_context
  display none
  overflow hidden
  float left
  margin-right 10px
  margin-bottom 10px

.search_result
  overflow hidden
  margin-top 4px

.context_results_block
  display inline

.context_result
  text-decoration none
  margin-right 5px
  &:last-child
    margin-right 0px
    &:after
      content ''
  &:hover
    color red
  &:after
    margin-left 5px
    content '・'
    color black

.context_title
  font-size 18px
  float left
  margin-right 10px
  font-family ma_unitwmedium

.content_title_block
  width 100%
  overflow hidden
  font-size 22px
  line-height 21px
  width 1280px
  margin 0 auto

.sponsor_info
  margin-right 10px
  text-decoration none
  &:hover
    color red

.sponsor_date
  float right


.projects_title, .architects_title, .subject_title_block, .object_title_block
 /* font 30px/32px 'ma_unitwmedium'
  padding 20px 0 10px
  border-bottom 1px solid*/
  margin 10px 0
@media screen and (max-width:1280px) {
    .screen_width, .screen_width_absolute, .header_block_inner, .footer_block_inner, .content_block, .content_title_block {
      width: 1000px;
    }
    .screen_width_absolute {
      margin-left: -500px;
    }
    .styles_inner_block, .navigate_styles_block {
      width: 980px;
    }
  }
