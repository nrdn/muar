div, span, a, ul, li, h1, h2, h3
	margin 0
	padding 0

html, body
	margin 0
	padding 0
	// width 100%
	// height 100%
	color #333
	font 20px/25px 'ma_unitwlight'
	user-select none
	cursor default

*
	outline none

a
	color #333

a.m_item.menu_arch {
display: none;
}


.content_block
	width 1280px
	margin 0 auto

.header_block
	width 100%
	z-index 1000
	&.fixed_header
		position fixed
		top 0
		.header_block_inner
			box-shadow 0 2px 8px rgba(204, 204, 204, 0.49)
			margin 10px auto 0
			color #000
			background #fff
			position relative
			.logo_description
			.menu_item
			a
				color #000
				&:hover
					color #f00

.screen_width_absolute
.screen_width
.header_block_inner
.footer_block_inner
	//width 1280px
	width 100%
	max-width 1280px

.screen_width_absolute
	margin-left -640px

.styles_inner_block, .navigate_styles_block
	width 1280px

.footer_block
	bottom 0
	background #fff
	position fixed
	width 100%
	min-height 26px
	line-height 25px
	font-size 12px
	font-family ma_unitwmedium
	z-index 900000

.header_block_inner
.footer_block_inner
	margin 0 auto

.footer_content_block
	font-size 16px
	font-family ma_unitwlight

.footer_sponsors_block
	border-top 1px solid
	a
		:hover
			color red

.header_block_inner
	height 50px
	position relative
	margin-top 10px
	background #fff
	max-width 1310px

.header_block_menu
	max-width 1280px
	width 100%
	margin 0 auto
	position relative
	top 0

.styles_header_title_control
	max-width 1280px
	width 100%
	margin 0 auto
	height 30px
	border-bottom 2px solid #000

.styles_header_title
	font-size 23px
	text-align center
	line-height 29px

.header_logo
	text-decoration none
	overflow hidden
	width 115px
	height 35px
	margin-right 15px
	margin-top 3px
	cursor pointer
	background-image url('/images/design/logo_sprite.png')
	background-size 115px
	background-position 0 0px
	background-repeat no-repeat
	float left
	&:hover
		background-position 0 0
.logo_description
	width 180px
	margin-top 9px
	float left
	font-size 11px
	line-height 14px

.menu_navigate_block
	z-index 999
	overflow hidden
	position absolute
	right 62px
	top 10px
	a
		padding 0 5px
		text-decoration none
		&:hover
			color red

.menu_block
	position absolute
	right 0
	top 8px

.menu_item
	float left
	margin-left 5px
	font 26px/28px 'menu_icons'
	cursor pointer
	&.lang
		text-decoration none
	&:hover
		color red

.content_search_block
	position fixed
	background rgba(0,0,0,0.9);
	overflow hidden
	z-index 10000000
	width 100%
	display none
	top 0
	height 100%

.search_inner
	width 1280px
	padding-bottom 5px
	position relative
	margin 0px auto
	overflow hidden
	height 100%

.search_block
	position absolute
	top 40px
	width 100%

.search_title
	color #eee
	font 44px/44px 'ma_unitwlight'
	width 100%
	padding-top 100px
	padding-bottom 10px

.search_field
	width 100%
	font-size 44px
	font-family ma_unitwlight
	border none
	margin 2px
	padding 0
	border-bottom 1px solid #eee
	display block
	background transparent
	color #eee

.objects_context
.architects_context
.subjects_context
	display none
	overflow hidden
	float left
	margin-right 10px
	margin-bottom 10px

.search_result
	overflow hidden
	margin-top 16px

.search_cross
	position absolute
	top -20px
	right 0
	width 40px
	height 40px
	background url('/images/design/cross.png') 0 0
	background-size auto 40px
	cursor pointer

.search_cross:hover
	background-position 40px 0

.context_results_block
	display inline

.context_result
	color #eee
	text-decoration none
	margin-right 5px
	&:last-child
		margin-right 0px
		&:after
			content ''
	&:hover
		color red
	&:after
		margin-left 5px
		content '・'
		color #eee

.context_title
	font-size 18px
	float left
	margin-right 10px
	font-family ma_unitwmedium
	color #eee

.content_title_block
	width 100%
	overflow hidden
	font-size 22px
	line-height 21px
	width 1280px
	margin 0 auto

.sponsor_info
	margin-right 10px
	text-decoration none
	&:hover
		color red

.sponsor_date
	float right

a[href='/styles/#546f52adefcff44843391164'] .style_title_date
a[href='/styles/#546f57ca1238740a476aa789'] .style_title_date
	overflow hidden
	position relative
	font-size 0

a[href='/styles/#546f52adefcff44843391164'] .style_title_date:after
	content 'X–XVII вв.'
	position absolute
	display block
	top 0
	height 42px
	z-index 1000
	font-size 18px
	width 100%

a[href='/styles/#546f57ca1238740a476aa789'] .style_title_date:after
	content 'XVII–XVIII вв.'
	position absolute
	display block
	top 0
	height 42px
	z-index 1000
	font-size 18px
	width 100%

//-----


.projects_title, .architects_title, .subject_title_block, .object_title_block, .architect_title, .category_title, .project_title
	border-bottom 1px solid #d7d7d7
	font: 65px/95px 'ma_unitwmedium'
	text-align center
	margin-bottom 50px

@media screen and (max-width:1280px) {
		.search_inner, .screen_width, .header_block_menu, .screen_width_absolute, .header_block_inner, .content_block, .content_title_block {
			width: 1000px;
		}
		.screen_width_absolute {
			margin-left: -500px;
		}
		.styles_inner_block, .navigate_styles_block {
			width: 1000px;
		}
		.footer_block {
			left: 40px;
			right: 40px;
			width: auto;
		}
}
