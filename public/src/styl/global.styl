html,
body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font: 11pt/13pt 'ma_unitwlight'

*
  outline: none

html > body > .content_block
  height: 100%

.content_block
  width: 1024px
  margin: 0 auto

.header_block,
.footer_block
  width: 100%

  left: 0
  z-index: 20

.footer_block
  position: fixed

.header_block_inner,
.footer_block_inner
  width: 1024px
  margin: 0 auto
  background: url("/images/trace_v.png") 50% 0 no-repeat
  background-size: 1024px
  background-color: #fff

.header_block,
.header_block_inner
  height: 75px

.header_block_inner
  background-image: none

.top_line_block
  padding-top: 6px
  float: none
  width: 100%
  overflow: hidden
  height: 18px
  font-size: 0.97em
  letter-spacing: 0px

.top_menu_block
  float: left

.top_menu_block a
  padding-right: 22px
  color: #000

.top_menu_block a:hover
  text-decoration: none

.top_search_block
  width: 215px
  height: 11pt
  float: right
  color: #ccc
  border-bottom: 1px solid #000
  outline: none

.header_logo
  width: 160px
  height: 51px
  margin: 0 auto
  display: block
  background: url("/images/design/logo.png") 50% no-repeat
  background-size: contain

.styles_container h2
  position: absolute

.styles_header_title_control
  width: 1022px
  margin: 0 auto
  height: 29px
  border-bottom: 2px solid #000

.styles_header_title
  font-size: 23px
  text-align: center
  line-height: 29px

.object_block
    width: 92%
    margin: 0 auto 10px

.object_block_image
    width: 100%
    background: #eee;
    height: 153px;

.object_block_image.object_block_div
    background: #eee
    height: 153px

.object_block_title
    font-size: 20px
    line-height: 21px
