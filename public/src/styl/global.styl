div, span, a, ul, li, h1, h2, h3
  margin 0
  padding 0

html, body
  margin 0
  padding 0
  // width 100%
  // height 100%
  color #333
  font 18px/21px 'ma_unitwlight'

*
  outline none

html, body, .content_block
  // height 100%

a
  color #333

.content_block
  width 1280px
  margin 0 auto

.header_block, .footer_block
  width 100%

.footer_block
  position fixed
  width 100%

.header_block_inner
.footer_block_inner
  width 1280px
  margin 0 auto

.header_block_inner
  height 35px
  position relative
  margin-top 10px
  background #fff

.styles_header_title_control
  width 1280px
  margin 0 auto
  height 30px
  border-bottom 2px solid #000

.styles_header_title
  font-size 23px
  text-align center
  line-height 29px

.header_logo
  width 180px
  height 35px
  display block
  background url('/images/design/logo.png') 0 0 no-repeat
  background-size 120px
  padding-left 140px
  font-size 11px
  padding-top 5px
  line-height 14px
  text-decoration none
  color #333

.menu_block
  position absolute
  right 0
  top 9px

.menu_item
  float left
  margin-left 5px
  font 26px/28px 'menu_icons'
  cursor pointer
  &.lang
    margin-right 5px
  &:hover
    color red

.content_search_block
  position absolute
  background-color white
  overflow hidden
  z-index 100
  width 100%
  display none

.search_inner
  width 1280px
  padding-top 2px
  padding-bottom 5px
  position relative
  margin 0 auto
  overflow hidden

.search_title
  font-size 24px
  float left
  margin-top 7px
  cursor pointer
  &:hover
    color red

.search_field
  width 1100px
  font-size 24px
  font-family ma_unitwlight
  border none
  margin 2px
  padding 0

.objects_context
.architects_context
.subjects_context
  display none
  overflow hidden
  float left
  margin-right 10px

.search_result
  overflow hidden

.context_results_block
  display inline

.context_result
  text-decoration none
  margin-right 5px
  &:last-child
    margin-right 0px
    &:after
      content ''
  &:hover
    color red
  &:after
    margin-left 5px
    content 'ãƒ»'
    color black

.context_title
  font-size 18px
  float left
  margin-right 10px
  font-family ma_unitwmedium

.content_title_block
  width 100%
  overflow hidden

.content_navigate_block
  width 1280px
  position relative
  margin 10px auto 0
  overflow hidden
  display none
  a
    margin-right 10px
    font-size 24px
    text-decoration none
    &:hover
      color red