a.m_item.menu_arch, a.m_item.menu_term {
display: none;
}

.content_block
	width 1280px
	margin 0 auto

.header_block
	width 100%
	&.fixed_header
		position fixed
		background #fff
		border-bottom 1px solid #ccc
		.header_block_inner
			margin 6px auto 6px
			color #000
			.logo_description
			.menu_item
			a
				color #000
				&:hover
					color #f00

.screen_width_absolute
.screen_width
.header_block_inner
.footer_block_inner
	//width 1280px
	width 100%
	max-width 1280px

.screen_width_absolute
	margin-left -640px

.styles_inner_block, .navigate_styles_block
	width 1280px

.footer_block
	bottom 0
	background #fff
	position fixed
	width 100%
	min-height 26px
	line-height 25px
	font-size 12px
	font-family ma_unitwmedium
	z-index 900000

.header_block_inner
.footer_block_inner
	margin 0 auto

.footer_content_block
	font-size 16px
	font-family ma_unitwlight

.footer_sponsors_block
	border-top 1px solid
	a
		:hover
			color red

.header_block_inner
	height 35px
	position relative
	margin-top 6px
	background #fff

.styles_header_title_control
	width 1280px
	margin 0 auto
	height 30px
	border-bottom 2px solid #000

.styles_header_title
	font-size 23px
	text-align center
	line-height 29px

.header_logo
	text-decoration none
	overflow hidden
	width 115px
	height 35px
	margin-right 15px
	cursor pointer
	background-image url('/images/design/logo_sprite.png')
	background-size 115px
	background-position 0 0px
	background-repeat no-repeat
	float left
	&:hover
		background-position 0 0
.logo_description
	width 180px
	margin-top 5px
	float left
	font-size 11px
	line-height 14px

.menu_navigate_block
