.content_block
	margin-bottom 40px

.architect_title
	margin 10px 0 15px
	font 34px/32px 'ma_unitwmedium'
	padding 20px 25px 10px

.content_block
	//margin-top 10px
	overflow hidden

.architect_block
	margin-bottom 10px
	display none

.architect_block_text
	display inline

.architect_block_text:before
	content 'Ôºç'

.architect_block_title
	padding 0 25px
	font-family 'ma_unitwlight'
	font-size 18px
	text-decoration none
	&:hover
		color #f00

.architect_attached_objects
	margin 20px 25px 20px

.architect_object
	float left
	width 230px
	height 190px
	display block
	position relative
	margin-right 20px
	background-size cover
	background-position 50%
	background-repeat no-repeat
	margin-bottom 20px
	&:nth-child(5n)
		margin-right 0

.architect_object:hover
	color #f00

.architect_object_name
	bottom 0
	width 100%
	background #fff
	position absolute

.architect_attached_title
	font-family 'ma_unitwlight'	
	font-size 24px
	margin-bottom 10px
	padding 0px 25px
	display none

.footer_block
	font 14px/16px 'ma_unitwlight'

.footer_sponsors_block
	border-top 1px solid #d7d7d7
	padding 10px 25px 10px


@media screen and (max-width: 1280px) {
		.architect_object, .architect_object:nth-child(5n) {
				margin-right: 10px
		}

		.architect_object:nth-child(4n) {
				margin-right: 0
		}

}

