.content_title_block
  width 100%
  max-width 1280px

.content_block
  margin-bottom 40px
  width 100%
  max-width 1280px

.projects_title
  margin 10px 0
  font 34px/32px 'ma_unitwlight'
  padding: 20px 25px 10px;

.project_block
  display block
  overflow hidden
  text-decoration none
  margin-bottom 20px
  &:hover .project_title
    color #f00

.project_image
  background-position 50%
  background-size cover
  background-repeat no-repeat
  height 300px
  position relative
  display block

.project_description_block
  padding 10px 0

.project_title
  padding-bottom 5px

.project_title
  display block
  text-decoration none
  font 30px/30px 'ma_unitwlight'
  padding 0 0 10px
  border-bottom 1px solid #d7d7d7
  margin-bottom 10px
  padding: 0px 25px 10px;
  width 100%
  max-width 1280px