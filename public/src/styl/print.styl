body
	font 12pt/15pt Times, sans

.main_menu_block
.content_block
	width 1100px
	padding 20px 0

.header_block
.content_title_block
	display none

.object_item
	width 1100px
	border 1px solid #000
	margin 0 auto
	position relative
	overflow hidden
	border-bottom 0
	&:last-child
		border-bottom 1px solid #000


.object_description_block
	width 680px
	float left
	padding 5px


.object_title
	font-size 24px
	line-height 26px
	text-decoration none
	&:hover
		text-decoration underline

.object_architects
	font-weight bold
	&:before
		content 'Архитекторы:'
		margin-top 5px
		display block
		font-weight normal

.object_categorys
	margin-bottom 10px
	&:before
		content 'Категории:'
		margin-top 5px
		display block

.category_item
	margin-right 10px
	font-weight bold

.object_graphics_block
	width 390px
	border-left 1px solid black
	float left
	overflow hidden

.object_images
.object_subjects
.subject_image
.image_img
	width 185px


.image_item
.subject_item
	margin-bottom 10px
	font-size 10pt
	line-height 12pt

.subject_inventory
	font-weight bold

.object_images
	float left
	margin 0 10px
	&:before
		content 'Изображения:'
		display block

.object_subjects
	float left
	&:before
		content 'Единицы хранения:'
		display block