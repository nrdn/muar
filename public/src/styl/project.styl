.broken
.missing
.unsupported
	height 600px
	background-size cover
	background-position 50%
	overflow hidden

.broken_background
	height 600px
	line-height 33px
	text-align center
	background rgba(255,255,255,0.8)
	font-size 30px
	padding 265px 29px 0
	display block
