// header_block
.header_logo
	background-position 0 0

body:after
	content ''
	top 0
	left 0
	width 100%
	height 200px
	display block
	position absolute
	background url('/images/design/gr.png') 0 100% repeat-x
	background-size 1px 290px
	opacity 0.7

.header_block
	left 0
	top 0
	position absolute
	z-index 1000

.header_block_inner
	background transparent
	color #fff
	& a
		color #fff


.side_description
	position absolute
	top 70px
	top 55px
	bottom 0px
	left 0
	right 0
	right 0px
	//z-index 0
	color #fff

.side_description_inner
	height 100%
	width 1280px
	margin 0 auto
	position relative

.side_description_column
	position absolute
	top 0
	bottom 0
	right 0
	width 360px
	z-index 100000

