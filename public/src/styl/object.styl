	//background rgba(0, 0, 0, 0.66)

.subject_inventory
	border-bottom 1px solid

.object_title
	position relative
	font-size 24px
	color #fff
	font-family ma_unitwmedium
	padding 15px 20px 3px
	background: rgba(0,0,0,0.66);
	line-height 26px

.object_navigate_block
	z-index 9999
	position relative
	overflow hidden

.images_descriptons_block
	background rgba(255, 255, 255, 0.85)
	margin-top 10px
	padding 10px 20px 10px
	color #000

.content_title_block
	left 0
	top 45px
	position absolute
	z-index 1000
	width 100%
	overflow visible

.content_block
	width 100%


.object_navigate
	font-size 18px
	padding-top 5px
	padding 5px 10px 0
	color #fff
	line-height 28px
	background rgba(0, 0, 0, 0.66)
