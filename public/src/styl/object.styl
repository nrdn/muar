.object_description_block
	width 100%
	min-height 50px
	z-index 9999
	font-size 16px
	background-color white
	position absolute
	display block

.description_inner
	width 1280px
	padding-top 5px
	padding-bottom 5px
	position relative
	overflow hidden
	margin 0 auto

.description_column
	margin-right 20px
	&:last-child
		margin-right 0px

.column_item_wrap
	padding 10px 0
	background: rgba(0,0,0,0.66);

.column_item
	margin 6px 20px
	overflow hidden
	&:last-child
		margin-bottom 0px
	a
		//text-decoration none
		color #fff
		&:hover
			color red
		&:after
			content ','
			margin-right 5px
		&:last-child:after
				content ''
				margin-right 0

.column_title
	float left
	font-family 'ma_unitwmedium'
	margin-right 10px

.object_images_block
.object_3d_block
	width 100%
	top 0px
	bottom 0
	overflow hidden
	position absolute
	background-color #d5d5d5
	background url('/images/design/bckg.jpg')

.object_3d_block
	display none

.object_image
	display none
	width 100%
	height 100%
	background-size contain
	background-size cover
	background-repeat no-repeat
	background-position center
	background-attachment fixed
	&:nth-child(1)
		display block

.images_navigate_block
	position absolute
	top 0
	width 100%
	height 100%

.images_navigate_block_inner
	width 1280px
	margin 0 auto
	height 100%
	position relative
	&>div
		position absolute
		font-size 120px
		color #fff
		text-shadow 0 0 1px #000
		user-select none
		opacity 0
		width 30%
		height 100%
		margin-top -60px
		&:hover
			opacity 0.9
			cursor pointer
		&.images_navigate_block_prev
			left 10px
		&.images_navigate_block_next
			right 10px
			text-align right
			width 70%
		& .images_arrow
			top 50%
			position absolute
			width 100%

.next_arrow
	position absolute
	right 400px



.object_subjects_block
	position absolute
	width 100%
	//top 115px
	top 0
	bottom 0
	display none

.object_slide_navigate
	position absolute
	width 100%
	z-index 9999
	display none
	//overflow auto
	left 0

.slide_navigate_inner
	width 1280px
	//overflow hidden
	position relative
	padding-top 10px
	margin 0px auto

.slides_inner_block
	position absolute
	top 10px
	right 370px
	padding 10px
	width 780px
	background #000
	background: rgba(0, 0, 0, 0.85);

.object_slide_item
	width 180px
	height 150px
	margin-right 20px
	margin-bottom 10px
	float left
	background-size cover
	background-position center
	background-repeat no-repeat
	&:nth-child(4n)
		margin-right 0
	&:hover
		cursor pointer

.object_slide_title
	top 100%
	font-size 16px
	position relative

.slide_title_inner
	bottom 0
	position absolute
	background-color white
	font-size 13px
	line-height 15px
	padding 3px


.description_item
	display none
	&.images:first-child
		display block

.footer_block
	background rgba(0,0,0,0.6)
	color white

.sponsor_info
	color white

// ---

.main_description_block
	position absolute
	top 100%
	height auto
	width 100%

.main_description_inner, .main_attached_objects_inner
	margin 0 auto 20px
	width 1280px

.main_description_column
	padding 14px 0px 20px

.main_description_title
	display block
	text-decoration none
	font 30px/32px 'ma_unitwmedium'
	margin 20px 0 0
	padding 10px 0
	border-bottom 1px solid #d7d7d7

.main_description_text
	padding 14px 0px 20px

.footer_block_inner
	position relative


.main_attached_objects
	position absolute
	height 100%
	top 100%
	width 100%

.architect_block_title
	font-family ma_unitwmedium
	font-size 18px
	text-decoration none
	&:hover
		color #f00

.main_attached_objects_block
	margin 20px 0 20px

.architect_object
	float left
	width 240px
	height 200px
	display block
	position relative
	margin-right 20px
	background-size cover
	background-position 50%
	background-repeat no-repeat
	margin-bottom 20px

.architect_object:nth-child(5n)
	margin-right 0px

.architect_object:hover
	color #f00

.architect_object_name
	bottom 0
	width 100%
	background #fff
	position absolute

@media screen and (max-width:1280px) {
	.description_inner, .image_description_inner, .images_navigate_block_inner, .slide_navigate_inner, .side_description_inner, .main_description_inner, .main_attached_objects_inner {
		width: 1000px;
	}
	.architect_object, .architect_object:nth-child(5n) {
		margin-right: 13px;
	}
	.architect_object:nth-child(4n) {
		margin-right: 0px;
	}
	.description_column {
		width: 220px;
	}
	.object_slide_item, .object_slide_item:nth-child(5n) {
		margin-right: 13px;
	}
		.object_slide_item:nth-child(4n) {
		margin-right: 0px;
	}
}
