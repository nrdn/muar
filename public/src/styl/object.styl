.content_block
	width 100%

.object_title
	width 1280px
	position relative
	margin 10px auto 0
	font-size 24px

.object_navigate_block
	width 1280px
	z-index 9999
	margin 0 auto
	position relative
	overflow hidden
	padding-bottom 3px

.object_navigate
	float left
	margin-right 10px
	font-size 18px
	padding-top 5px
	&.model
		width 25px
		height 22px
		margin-top 3px
		padding-top 3px
		margin-right 0px
		color red
		text-align center
		border-radius 50px
		border 1px solid red
		font-size 14px
		position relative
		&:hover
			color white
			background-color red
	&:hover
		color red
		cursor pointer

.object_description_block
	width 100%
	min-height 100px
	z-index 9999
	font-size 16px
	background-color white
	position absolute
	display none

.description_inner
	width 1280px
	padding-top 5px
	padding-bottom 5px
	position relative
	overflow hidden
	margin 0 auto

.description_column
	width 620px
	float left
	margin-right 20px
	&:last-child
		margin-right 0px

.column_item
	overflow hidden
	&:last-child
		margin-bottom 0px
	a
		text-decoration none
		&:hover
			color red
		&:after
			content ','
			margin-right 5px
		&:last-child:after
				content ''
				margin-right 0

.column_title
	float left
	font-size 14px
	font-family 'ma_unitwmedium'
	margin-right 10px

.object_images_block
	width 100%
	top 110px
	bottom 0
	overflow hidden
	position absolute
	background-color #d5d5d5

.object_image
	display none
	width 100%
	height 100%
	background-size contain
	background-repeat no-repeat
	background-position center
	&:nth-child(1)
		display block

.object_subjects_block
	position absolute
	width 100%
	top 110px
	bottom 0
	display none

.object_slide_navigate
	position absolute
	width 100%
	background-color white
	z-index 9999
	display none
	overflow auto

.slide_navigate_inner
	width 1280px
	overflow hidden
	position relative
	padding-top 10px
	margin 0px auto

.object_slide_item
	width 240px
	height 160px
	margin-right 20px
	margin-bottom 10px
	float left
	background-size cover
	background-position center
	background-repeat no-repeat
	&:nth-child(5n)
		margin-right 0
	&:hover
		cursor pointer

.object_slide_title
	top 100%
	font-size 16px
	position relative

.slide_title_inner
	bottom 0
	position absolute
	background-color white
