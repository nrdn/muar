.content_block
	width 100%

.object_navigate_block
	width 1280px
	margin 5px auto
	position relative
	overflow hidden

.object_navigate
	float left
	margin-right 15px
	font-size 24px
	padding-top 5px
	&.model
		width 30px
		height 25px
		margin-right 0px
		color red
		text-align center
		border-radius 60px
		border 1px solid red
		font-size 16px
		position relative
		&:hover
			color white
			background-color red
	&:hover
		color red
		cursor pointer

.object_description_block
	width 100%
	min-height 100px
	z-index 999
	background-color white
	position absolute
	display none

.description_inner
	width 1280px
	padding-top 5px
	padding-bottom 5px
	position relative
	margin 0 auto


.object_images_block, .object_image
	width 100%
	height 100%
	background-repeat no-repeat
	background-position center
	position absolute

.object_images_navigate
	position absolute
	width 100%
	overflow hidden
	background-color white
	z-index 9999
	display none

.object_image_navigate
	width 220px
	height 120px
	margin 5px 0 5px 5px
	float left
	background-size cover
	background-position center
	&:hover
		cursor pointer

.object_subjects_block
	position absolute
	width 100%
	top 90px
	bottom 0
	display none