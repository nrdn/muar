.content_block
	width 100%

.object_title
	width 1280px
	position relative
	margin 10px auto 0
	font-size 24px

.object_navigate_block
	width 1280px
	z-index 9999
	margin 0 auto
	position relative
	overflow hidden
	padding-bottom 3px

.object_navigate
	float left
	margin-right 10px
	font-size 18px
	padding-top 5px
	&.model
		width 25px
		height 22px
		margin-top 3px
		padding-top 3px
		margin-right 0px
		color red
		text-align center
		border-radius 50px
		border 1px solid red
		font-size 14px
		position relative
		&:hover
			color white
			background-color red
	&:hover
		color red
		cursor pointer

.object_description_block
	width 100%
	min-height 100px
	z-index 9999
	background-color white
	position absolute
	display none

.description_inner
	width 1280px
	padding-top 5px
	padding-bottom 5px
	position relative
	margin 0 auto


.object_images_block
	width 100%
	top 110px
	bottom 0
	overflow hidden
	background-repeat no-repeat
	background-position center
	background-repeat no-repeat
	position absolute

.object_image
	display none
	width 100%
	cursor move
	&:nth-child(1)
		display block

.object_subjects_block
	position absolute
	width 100%
	top 110px
	bottom 0
	display none

.object_slide_navigate
	position absolute
	width 100%
	background-color white
	z-index 9999
	display none
	overflow auto

.slide_navigate_inner
	width 1280px
	overflow hidden
	position relative
	padding-top 10px
	margin 0px auto

.object_slide_item
	width 240px
	height 160px
	margin-right 20px
	margin-bottom 10px
	float left
	background-size cover
	background-position center
	background-repeat no-repeat
	&:nth-child(5n)
		margin-right 0
	&:hover
		cursor pointer