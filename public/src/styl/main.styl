.main_page_specials {
    display: block;
    overflow: hidden;
    padding: 0px 0px 17px;
    text-decoration: none;
    background: #f13015;
    color: #fff;
    width: 906px;
    float: left;
}
.main_page_specials:hover {
    text-decoration: underline;
    background: #f13015;
    background: #fff;
    color: #000
}
.main_page_specials .main_page_specials_inner {
    display: block;
    background: url(/images/design/special.jpg) 50% no-repeat;
    background-size: 906px;
