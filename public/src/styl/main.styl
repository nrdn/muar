body
  height 100%

body > .content_block
  height 100%

.content_block > .screen_block
  height 100%

.header_block
  position absolute
  top 0
  z-index 100000
  width 100%

.header_block_inner
  background transparent

.logo_description, .menu_item
  color #fff

.screen_block
  width 100%
  position relative
  overflow hidden

.title_block
  width 1280px
  margin 0 auto

.content_block
  width 100%
  position absolute
  top 0
  height 100%

.header_logo
  background-position 0 0

//-- 1ый Блок --//
.intro_block_title
  position absolute
  top 50%
  width 100%
  z-index 9999
  margin-top -90px

.intro_block_title_inner
  width 1280px
  margin 0 auto

.main_title
  border-bottom 1px solid #fff
  color #fff
  font 46px/66px 'ma_unitwmedium'
  text-align center

.additional_title
  text-align center
  color #fff
  line-height 41px
  font-size 21px

.intro_block_background
  background url('/images/design/12.jpg') 50% no-repeat
  background-size cover
  opacity 0.6
  height 100%
  background-attachment fixed

.intro_block
  background #000

.styles_block
  width 100%
  position absolute
  top 56px
  left 0
  z-index 1000

.styles_inner_block
  width 1272px
  margin 0 auto
  display table

.style_item
  text-decoration none
  font-size 24px
  margin-right 15px
  color #fff
  display table-cell
  &:hover
    color #ee3124

.style_name
  margin 0 6px
  border-bottom 1px solid
  text-align center
  position relative
  padding-bottom 3px

.style_name:after
  content '•'
  display block
  position absolute
  left 100%
  bottom -13px
  margin-left 2px
  font-size 26px

.style_item:last-child .style_name:after
  content '>'
  bottom -11px

.style_item:first-child .style_name:before
  content '◦'
  display block
  position absolute
  right 100%
  bottom -12px
  margin-left 2px
  font-size 13px

.goto_down
  position absolute
  bottom 26px
  width 100%
  height 60px
  & div
    bottom -26px
    position absolute

.goto_down a
  width 50px
  height 50px
  margin 0 auto
  display block
  text-align center
  color #fff
  font: 26px/56px 'menu_icons';
  text-decoration none
  border-radius 50%
  border 1px solid
  cursor pointer
  &:hover
    color #EE3124!important

.intro
  display block
  border-radius 4px
  background #EE3124
  width 300px
  height 50px
  line-height 50px
  font-size 25px
  text-align center
  color #fff
  margin 20px auto 0
  border 2px solid transparent
  &:hover
    //background transparent
    border-color #fff

//-- 2ой Блок --//

.screen_block.periods_block.screen_block_height
  height 620px

.content_block > .screen_block_height
  height auto
  padding-bottom 60px

.description_inner
  background transparent
  width 1280px
  margin 0 auto

.description_title
  display block
  text-decoration none
  font 30px/32px 'ma_unitwmedium'
  margin 20px 0 0
  padding 10px 0
  border-bottom 1px solid #333

.description_block
  margin 20px 0
  padding 14px 0px 20px

.description_text
  width 60%
  font-size 18px
  line-height 22px
  float left
  p
    margin 0 0 10px
    padding 0

.description_text2
  width 40%
  float left
  position relative
  min-height 280px

.logo_block
  position absolute
  bottom 0px
  right 0

.description_text2 img
  width 300px
  margin-top 20px
  margin-bottom 10px
  display block

.description_text2 img.krf


.description_block .goto_down a
  color #333


//-- 3ой Блок --//
.styles_line
  background #fff
  margin 20px 0
  padding 14px 0px 20px
  font-size 18px
  line-height 22px
  overflow hidden
  position absolute
  top 72px
  bottom 80px
  left 0px
  right 0px
  height 540px

a.styles_line_nav
  display block
  position absolute
  font 46px/100px 'menu_icons'
  z-index 10000
  width 48px
  height 100px
  text-align center
  //background #999
  color #fff
  top 180px
  cursor pointer
  &.prev
    left 0px
  &.next
    right 0px
  &:hover
    color #EE3124

.styles_inner_line
  white-space nowrap

.style_block
  width 240px
  height 500px
  overflow hidden
  display inline-block
  margin-right 10px
  background-size 100%
  position relative
  vertical-align top

.style_image
  height 170px
  background-position 50%
  background-repeat no-repeat
  background-size cover
  background-color #ccc

.style_title
  background #2d2d2d

.style_title_inner
  color #fff
  font 20px/22px 'ma_unitwmedium'
  padding 10px
  height 90px

.style_description
  padding 10px 0
  background #fff

.style_description_inner
  white-space normal
  font-size 16px
  line-height 17px

//-- 4ой Блок --//
.special_block_background
  background url('/images/design/13.jpg') 50% no-repeat
  background-size cover
  opacity 0.6
  height 100%

.special_block
  background #000
  & .description_title
    color #fff
    border-bottom 1px solid #fff

.special_block_inner
  position absolute
  z-index 100
  top 0
  width 100%


.periods_block .goto_down a
  color #333

