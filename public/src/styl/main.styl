body
  height 100%

body > .content_block
  height 100%

.content_block > .screen_block
  height 100%

.header_block
  position absolute
  top 0
  z-index 100000
  width 100%

.screen_block
  width 100%
  position relative
  overflow hidden

.title_block
  width 1280px
  margin 0 auto

.content_block
  width 100%
  position absolute
  top 0
  height 100%


//-- 1ый Блок --//
.intro_block_background
  background url('/images/design/12.jpg') 50% no-repeat
  background-size cover
  opacity 0.6
  height 100%
  background-attachment fixed

.intro_block
  background #000

.styles_block
  width 100%
  position absolute
  top 50%
  margin-top -25px

.styles_inner_block
  width 1280px
  margin 0 auto
  display table

.style_item
  text-decoration none
  font-size 24px
  margin-right 15px
  color #fff
  display table-cell
  &:hover
    color red

.style_name
  margin 0 6px
  border-bottom 1px solid
  text-align center
  position relative
  padding-bottom 3px

.style_name:after
  content '•'
  display block
  position absolute
  left 100%
  bottom -13px
  margin-left 2px
  font-size 26px

.goto_down
  position absolute
  bottom 26px
  width 100%
  height 40px
  opacity 0.6
  &:hover
    opacity 1
  & div
    bottom -26px
    position absolute

.goto_down a
  width 180px
  height 40px
  background #fff url('/images/design/down.png') 50% 7px no-repeat
  margin 0 auto
  display block
  background-size 42px
  &:hover
    background-position 50% -98px
    padding-top 10px


//-- 2ой Блок --//

.content_block > .screen_block_height
  height auto
  padding-bottom 60px

.description_inner
  background transparent
  width 1280px
  margin 0 auto

.description_title
  display block
  text-decoration none
  font 30px/32px 'ma_unitwmedium'
  color #000
  margin 20px 0 0
  padding 10px
  border-bottom 1px solid #000

.description_text
  background #fff
  color #000
  margin 20px 0
  padding 14px 10px 20px
  width 60%
  font-size 18px
  line-height 22px
  p
    margin 0 0 10px
    padding 0

.description_block .goto_down a
  background-color #eee


//-- 3ой Блок --//
.styles_line
  background #fff
  color #000
  margin 20px 0
  padding 14px 10px 20px
  font-size 18px
  line-height 22px
  overflow-x auto
  overflow-y hidden
  position absolute
  top 72px
  bottom 80px
  left 0
  width 100%
  height 540px

.styles_inner_line
  white-space nowrap

.style_block
  width 240px
  height 500px
  overflow hidden
  display inline-block
  margin-right 10px
  background-size 100%
  position relative

.style_image
  height 170px
  background #ccc

.style_title
  background #2d2d2d

.style_title_inner
  color #fff
  font 20px/22px 'ma_unitwmedium'
  padding 10px
  height 90px

.style_description
  padding 10px 0
  background #fff

.style_description_inner
  white-space normal
  font-size 15px
  line-height 16px

//-- 4ой Блок --//
.special_block_background
  background url('/images/design/13.jpg') 50% no-repeat
  background-size cover
  opacity 0.6
  height 100%

.special_block
  background #000

.special_block_inner
  position absolute
  z-index 100
  top 0
  width 100%


.periods_block .goto_down a
  background-color #eee

