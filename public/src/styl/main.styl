.styles_block
  width 1280px
  margin 10px auto 0
  position relative

.style_item
  text-decoration none
  font-size 24px
  margin-right 10px
  &:hover
    color red

.parallax_block
  width 1280px
  position absolute
  top 85px
  bottom 0
  overflow hidden

.parallax-layer
  transform-origin 50%
  position absolute

.intro_block
  position absolute
  bottom 0

.intro_inner
  width 1280px
  position relative
  background-color white

.intro_title
  display block
  text-decoration none
  padding-top 5px
  font 32px/34px 'ma_unitwmedium'
  &:hover
    color red

.intro_description
  padding-top 5px
  padding-bottom 10px