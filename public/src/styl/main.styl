.content_title_block
  text-align left

.style_item
  text-decoration none
  margin-right 15px
  &:hover
    color red

.parallax_block
  margin 0
  position absolute
  top 124px
  bottom 0
  overflow hidden
  cursor pointer

.parallax-layer
  transform-origin 50%
  position absolute

.intro_block
  position absolute
  bottom 0

.intro_inner
  margin 0
  position relative
  background-color white

.intro_title
  display block
  text-decoration none
  padding-top 5px
  font 30px/32px 'ma_unitwlight'
  &:hover
    color red

.intro_description
  padding-top 5px
  padding-bottom 10px
  font-size 16px