}
.main_page_description {
    display: block;
    float: left;
    width: 374px;
    height: 490px;
}
.main_page_description p {
    margin: 0;
    line-height: 1.2em;
    padding: 86px 14px 0 0;
    font-size: 1.1em;
}
.main_page_styles {
    margin: 0 auto;
    overflow: auto;
    clear: both;
}
.style_container {
    height: 514px;
    background: #222;
    position: relative;
    display: block;
    background: none!important;
    width: 14.28%;
    float: left;
    overflow: hidden;
}
.style_container:hover {
    background: #e0e0e0!important;
}
.style_container:before {
    content:'';
    display: block;
    height: 160px;
    width: 92%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 50%;
    float:left;
    position: absolute;
    left: 0;
}
.style_name {
    font-size: 13pt;
    line-height: 15pt;
    position: absolute;
    left: 1px;
    top: 164px;
    border-bottom: 1px solid;
}
.style_descr {
    position: absolute;
    left: 0px;
    top: 209px;
    right: 30px;
    font-size: 13px;
    line-height: 16px;
    width: 139px;
}
