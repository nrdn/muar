body
  height 100%

body > .content_block
  height 100%

.content_block > .screen_block
  height 100%

.header_block
  position absolute
  top 0
  z-index 100000
  width 100%

.header_block_inner
  background transparent

.logo_description, .menu_item
  color #fff

.screen_block
  width 100%
  position relative
  overflow hidden
  background #fff
  min-width 1000px

.title_block
  margin 0 auto

.content_block
  width 100%
  position absolute
  top 0
  height 100%

.header_logo
  background-position 0 0

.menu_navigate_block a
  color #fff

//-- 1ый Блок --//
.intro_block_title
  position absolute
  top 50%
  width 100%
  z-index 9999
  margin-top -90px

.intro_block_title_inner
  margin 0 auto

.main_title
  border-bottom 1px solid #fff
  color #fff
  font 46px/66px 'ma_unitwmedium'
  text-align center

.additional_title
  text-align center
  color #fff
  line-height 41px
  font-size 21px

.intro_block_background
  background url('/images/design/14.jpg') 50% 50% no-repeat scroll
  transition height 0.1s ease
  background-size cover
  height 100%
  position fixed
  height 100%
  width 100%
  z-index -10
  &:after
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background: rgba(0, 0, 0, 0.4);
    content ''
    z-index -20

.intro_block
  background transparent

.styles_block
  width 100%
  position absolute
  top 65px
  left 0
  z-index 1000
  display none

.styles_inner_block
  margin 0 auto
  display table

.style_item
  text-decoration none
  font-size 24px
  font-size 22px
  margin-right 15px
  color #fff
  display table-cell
  &:hover
    color #ee3124

.style_name
  border-bottom 1px solid
  text-align center
  position relative
  padding-bottom 3px

.style_name:after
  content '|'
  display block
  position absolute
  left 100%
  bottom -12px
  font-size 8px

.style_item:last-child .style_name:after
  content '>'
  font-size 14px

.goto_down
  position absolute
  bottom 26px
  width 100%
  height 60px

.goto_down_inner
  margin 0 auto

.goto_down a
  width 50px
  height 50px
  margin 0 auto
  display block
  text-align center
  color #fff
  font 26px/56px 'menu_icons'
  text-decoration none
  border-radius 50%
  border 1px solid
  cursor pointer
  &:hover
    color #EE3124!important

.intro
  display block
  display none
  border-radius 4px
  background #EE3124
  width 300px
  height 50px
  line-height 50px
  font-size 25px
  text-align center
  color #fff
  margin 20px auto 0
  &:hover
    background #FD4032

//-- 2ой Блок --//

.screen_block.periods_block.screen_block_height
  height 620px

.content_block > .screen_block_height
  height auto
  padding-bottom 60px

.description_inner
  background transparent
  margin 0 auto

.description_title
  display block
  text-decoration none
  font 30px/32px 'ma_unitwmedium'
  margin 20px 0 0
  padding 10px 0
  border-bottom 1px solid #d7d7d7

.description_block
  padding 14px 0px 20px

.description_text
  width 60%
  font-size 18px
  line-height 22px
  float left
  p
    margin 0 0 10px
    padding 0

.description_text2
  width 40%
  float left
  position relative
  min-height 421px

.logo_block
  position absolute
  bottom -10px
  right 0

.description_text2 img
  width 160px
  margin-top 20px
  margin-bottom 10px
  display block


//-- 3ой Блок --//
.styles_line
  background #fff
  margin 20px 0
  padding 14px 0px 20px
  font-size 18px
  line-height 22px
  overflow hidden
  position absolute
  top 72px
  bottom 80px
  left 0px
  right 0px
  height 540px

a.styles_line_nav
  display block
  position absolute
  font 46px/100px 'menu_icons'
  z-index 10000
  width 48px
  height 100px
  text-align center
  color #fff
  top 144px
  cursor pointer
  &.prev
    left 0px
  &.next
    right 0px
  &:hover
    color #EE3124

.styles_inner_line
  white-space nowrap

.style_block
  width 260px
  overflow hidden
  display inline-block
  margin-right 10px
  background-size 100%
  position relative
  vertical-align top
  text-decoration none
  &:hover .style_title
    color #EE3124

.style_block:nth-child(1)
  margin-left 10px

.style_image
  height 190px
  background-position 50%
  background-repeat no-repeat
  background-size cover
  background-color #ccc

.style_title
  background #fff
  padding 10px
  height 58px

.style_title_inner
  font 24px/24px 'ma_unitwlight'
  border-bottom 1px solid
  padding-bottom 10px
  padding-top 5px
  text-align center

.style_title_date
  text-align center
  line-height 34px

.style_description
  padding 10px 7px
  background #fff

.style_description_inner
  white-space normal
  font-size 16px
  line-height 17px

//-- 4ой Блок --//
.special_block_background
  height 100%

.special_block
  background #000
  & .description_title
    color #fff
    border-bottom 1px solid #fff

.special_block_inner
  position absolute
  z-index 100
  top 0
  width 100%

.object_images_block
  width 100%
  top 0px
  bottom 0
  overflow hidden
  position absolute
  background-color #d5d5d5
  background url('/images/design/bckg.jpg')

.object_image
  display none
  width 100%
  height 100%
  background-size contain
  background-size cover
  background-repeat no-repeat
  background-position center
  &:nth-child(1)
    display block

.images_navigate_block
  position absolute
  top 0
  width 100%
  height 100%
  &:after
    content ''
    top 0
    left 0
    width 100%
    height 200px
    display block
    position absolute
    background url('/images/design/gr.png') 0 100% repeat-x
    background-size 1px 290px
    opacity 0.7

.images_navigate_block_inner
  margin 0 auto
  height 100%
  position relative
  &>div
    position absolute
    font-size 120px
    color #fff
    text-shadow 0 0 1px #000
    user-select none
    opacity 0
    width 30%
    height 100%
    margin-top -60px
    &:hover
      opacity 0.9
      cursor pointer
    &.images_navigate_block_prev
      left -4px
    &.images_navigate_block_next
      right 10px
      text-align right
      width 70%
    & .images_arrow
      top 50%
      position absolute
      width 100%

  a.images_description
    position absolute
    width 100%
    left 0
    top 140px
    //font-size 36px
    text-align center
    //border-bottom 1px solid #fff
    color #fff
    //font 46px/66px 'ma_unitwmedium'
    text-align center
    text-decoration none
    margin-top -100px
    z-index 10000
    &:hover
      & .main_title
        color #ee3124

//--------//

.footer_block
  display none
  color #fc0

@media screen and (max-width:1280px) {
  .style_title_inner {
    font-size: 22px;
  }
  .intro_block_background {
    position: absolute;
  }
}