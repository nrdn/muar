
html
body
	height 100%

.content_block
	height 100%

.header_block
	position absolute
	top 0
	z-index 100000
	width 100%

.header_block_inner
	background transparent

.logo_description, .menu_item
	color #fff

.screen_block
	position relative
	overflow hidden
	background #fff
	min-width 1000px

.title_block
	margin 0 auto

.content_block
	width 100%
	/*position absolute*/
	top 0
	height 100%

.header_logo
	background-position 0 0

.menu_navigate_block a
	color #fff

//-- 1ый Блок --//
.intro_block_title
	position absolute
	top 50%
	width 100%
	z-index 9999
	border-top 1px solid #fff
	height 0

.intro_block_title_inner
	margin 0 auto

.main_title
	border-bottom 1px solid #fff
	color #fff
	font 75px/95px 'ma_unitwmedium'
	text-align center
	position absolute
	bottom 0
	width 100%

.additional_title
	text-align center
	color #fff
	font 40px/60px 'ma_unitwlight'
	position absolute
	top 0
	width 100%

.intro_block_background
	background url('/images/design/14.jpg') 50% 50% no-repeat scroll
	transition height 0.1s ease
	background-size cover
	height 100%
	position absolute
	height 100%
	width 100%
	z-index -10
	&:after
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background: rgba(0, 0, 0, 0.4);
		content ''
		z-index -20

.intro_block
	background transparent
	height 50%
	min-height 400px
	max-height 800px

.styles_block
	width 100%
	position absolute
	top 65px
	left 0
	z-index 1000
	display none

.styles_inner_block
	margin 0 auto
	display table

.style_item
	text-decoration none
	font-size 24px
	font-size 22px
	margin-right 15px
	color #fff
	display table-cell
	&:hover
		color #ee3124

.style_name
	border-bottom 1px solid
	text-align center
	position relative
	padding-bottom 3px

.style_name:after
	content '|'
	display block
	position absolute
	left 100%
	bottom -12px
	font-size 8px

.style_item:last-child .style_name:after
	content '>'
	font-size 14px

.intro
	display block
	display none
	border-radius 4px
	background #EE3124
	width 300px
	height 50px
	line-height 50px
	font-size 25px
	text-align center
	color #fff
	margin 20px auto 0
	&:hover
		background #FD4032

//-- 2ой Блок --//

.screen_block.periods_block.screen_block_height
	height 620px

.content_block > .screen_block_height
	height auto
	padding-bottom 0px

.screen_block_height
	background-image url('/images/design/trace/actual-01.jpg') 50% -897px no-repeat

.description_title
	display: block
	text-decoration: none
	font 65px/95px 'ma_unitwmedium'
	text-align center

.description_inner
	background transparent
	margin 0 auto
	height 100%
	.description_title
		height 50%
		position relative
		.description_title_inner
			position absolute
			top 50%
			border-top 1px solid #ccc
			width 100%
			.description_title_name
				position absolute
				bottom 0
				text-align center
				width 100%

.description_block .description_inner
	overflow hidden
	//border-bottom 1px solid #ccc

.description_text
	font-size 20px
	line-height 25px
	margin 100px auto 50px
	width 850px
	p
		padding 0

.description_text2
	position relative
	text-align center
	margin 100px 0
	border-top 1px solid #ccc
	border-bottom 1px solid #ccc

.description_text2 img
	width 160px
	margin-top 20px
	margin-bottom 40px
	display inline-block
	margin-left 20px
	margin-right 20px

//-- 3ой Блок --//
.periods_block
	min-height 790px!important
	height 100%

.styles_line_outer
	background #fff
	font-size 18px
	line-height 22px
	overflow hidden
	/*!
	position absolute
	top 130px
	bottom 80px
	left 0px
	right 0px
	*/
	height 560px
	margin-top -130px

.styles_line
	height 600px
	overflow-x scroll
	width 1280px
	margin 0 auto

.styles_nav_block.screen_width
.special_nav_block.screen_width
	position relative

a.styles_line_nav
a.special_line_nav
	display block
	position absolute
	font 46px/100px 'menu_icons'
	z-index 10000
	width 39px
	background #fff
	height 100px
	text-align center
	color #000
	top -66px
	cursor pointer
	&.prev
		left -14px
	&.next
		right -14px
	&:hover
		color #EE3124

.styles_inner_line
	white-space nowrap

.style_block
	width 300px
	overflow hidden
	display inline-block
	margin-right 40px
	background-size 100%
	position relative
	vertical-align top
	text-decoration none
	.style_image
		height 200px
		background-position 50%
		background-repeat no-repeat
		background-size cover
		background-color #ccc
		filter grayscale(0.7)
	&:hover
		.style_title
			color #EE3124
		.style_image
			filter none
	&:last-child
		margin-right 0


.style_title
	background #fff
	padding 15px 0 0
	//height 58px

.style_title_inner
	font 27px/24px 'ma_unitwlight'
	padding 5px 10px 0
	white-space normal

.style_title_date
	line-height 34px
	padding 0 10px
	border-bottom: 1px solid #d7d7d7;
	margin-bottom 10px

.style_description
	background #fff

.style_description_inner
	white-space normal
	font-size 20px
	line-height 23px
	padding 0 10px

//-- 4ой Блок --//
.screen_block.special_block
	height auto
	min-height: 790px !important;
	height 100%

.special_block_background
	height 580px
	margin 0 auto
	overflow hidden
	position absolute
	top 50%
	margin-left: -640px
	left 50%
	margin-top -130px

.object_images_block
	white-space nowrap
	overflow-x scroll

.special_item_block
	display inline-block
	width 610px
	background-repeat no-repeat
	background-position center
	margin-right 10px
	margin-bottom 50px
	text-decoration none
	vertical-align top
	.special_image
		filter grayscale(0.7)
	&:hover
		.special_title
			color #ee3124
		.special_image
			filter none

.special_image
	width 100%
	height 260px
	background-size cover
	background-repeat no-repeat
	background-position 50%
	margin-bottom 14px

.special_title
	font 27px/24px 'ma_unitwlight'
	padding 5px 10px 10px
	white-space normal
	border-bottom 1px solid #d7d7d7
	margin-bottom 10px

.special_description_inner
	white-space normal
	font-size 16px
	line-height 17px
	padding 0 10px

.special_readmore
	font-family 'ma_unitwmedium'
	text-align center
	margin-top 10px
	font-size 43px
	letter-spacing 4px
	height 30px

//--------//

.footer_block
	position static
	font 14px/16px 'ma_unitwlight'

.footer_sponsors_block
	border-top 1px solid #d7d7d7
	padding 10px 25px 10px


@media screen and (max-width:1280px) {
	.styles_line {
		width: 950px;
	}
	.style_block {
		width: 310px;
	}
	.special_item_block {
		width: 470px;
	}
	.style_title_inner {
		font-size: 22px;
	}
	.intro_block_background {
		position: absolute;
	}
	.special_block_background {
		margin-left: -500px;
	}
}