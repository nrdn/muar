.content_block
  width 100%

.content_block_inner
  width 1280px
  margin 0 auto

.styles_block
  width 1280px
  margin 10px auto 0
  position relative

.style_item
  text-decoration none
  font-size 24px
  margin-right 15px
  &:hover
    color red

.parralax_slides_outer_block
  width 100%
  background #ccc
  margin-top 40px

.parallax_block
  width 1280px
  height 600px
  overflow hidden
  position relative
  margin 0 auto

.parallax-layer
  transform-origin 50%
  position absolute

.intro_block
  height auto

.intro_inner
  width 1280px
  position relative
  background-color white

.intro_title
  display block
  text-decoration none
  font 30px/32px 'ma_unitwmedium'

.intro_description
  padding-top 12px
  padding-bottom 10px
  font-size 16px

.slides_arrows_block
  width 1280px
  margin-left -640px
  position absolute
  height 100%
  left 50%
  z-index 99999

.slides_arrows_block>div
  position absolute
  font-size 120px
  color #fff
  text-shadow 0 0 1px #000
  user-select none
  opacity 0
  width 30%
  height 100%
  cursor pointer

.slides_arrows_block>div:hover
  opacity 0.9

.slides_arrows_block>div.slides_prew
  left 10px
  width 70%

.slides_arrows_block>div.slides_next
  right 10px
  text-align right

.slides_arrows_block>div .images_arrow
  top 50%
  position absolute
  width 100%

