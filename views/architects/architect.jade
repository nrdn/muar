extends ../layout

block title
	title АРХИТЕКТОР


block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/architects.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/architects.js' + version)

block content_title
	.architect_title= architect.i18n.name.get('ru')
block content
	.architect_block= architect.i18n.description.get('ru')
	.architect_attached_objects
	each object in objects
		a.architect_object(href='/objects/'+object._id)
			img(src=object.images[0].thumb)
			.architect_name= object.i18n.title.get('ru')
