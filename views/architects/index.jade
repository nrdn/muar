extends ../layout

block title
	title АРХИТЕКТОРЫ


block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/architects.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/architects.js' + version)

block content_title
	.object_title Архитекторы
block content
	each architect in architects
		.category_block
			a.category_block_title(href='/architects/' + architect._id)= architect.i18n.name.get('ru')
			.category_block_text= architect.i18n.description.get('ru')