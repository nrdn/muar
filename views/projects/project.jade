extends ../layout

block title
	title=  project.i18n.title.get(locale).toUpperCase() + ' | ' + __('СПЕЦПРОЕКТЫ')


block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/project.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/libs/js/UnityObject2.js' + version)
	script(type='text/javascript', src='/build/js/project.js' + version)

block content_title
	.project_title= project.i18n.title.get(locale)

block content
	.project_model#unityPlayer(path=project.model)
		.missing(style='background-image:url(' + project.photo + ')')
			a.broken_background(href='http://unity3d.com/webplayer/')= __('Для правильного воспроизведения моделей в браузере, необходимо установить Unity Player.')
		.broken(style='background-image:url(' + project.photo + ')')
			.broken_background= __('Извините, при загрузке  произошла ошибка.')
		.unsupported(class=project._id, style='background-image:url(' + project.photo + ')')
			if project._id == '5487420c7fb6fa000081e885'
				iframe(src="https://www.youtube.com/embed/rj1Zcu8m4zM", frameborder="0", allowfullscreen)
			else if project._id == '548496fb1fcde50000be2f14'
				iframe(src="https://www.youtube.com/embed/2CmJhzTq0vk", frameborder="0", allowfullscreen)
			else
				.broken_background= __('К сожалению, мы пока не можем обеспечить корректное воспроизведение 3D на Вашем устройстве. Используйте устройства на базе Windows или MacOS X.')

	.project_description: !=  project.i18n.description.get(locale)
