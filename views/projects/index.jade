extends ../layout

block title
	title= __('ВИРТУАЛЬНАЯ АРХИТЕКТУРА')


block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/special.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/architects.js' + version)

block content_title
	.projects_title= __('Спецпроекты')

block content
	.projects_block
		- var projects_hard = {'5487420c7fb6fa000081e885': 'chudov-i-voznesenskiy-monastyri-kremlya', '548496fb1fcde50000be2f14': 'proekt-bolshogo-kremlyovskogo-dvortsa'}
		each project in projects
			a.project_block(href='/projects/' + (projects_hard[project._id] || project._id) )
				.project_image(style="background-image:url("+project.photo+")")
				.project_description_block
					.project_title= project.i18n.title.get(locale)