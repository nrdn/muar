extends ../layout

block title
	title МУАР


block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/main.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/libs/js/jquery.parallax.js' + version)
	script(type='text/javascript', src='/build/js/index.js' + version)

block content_title

block content
	.main_block
		.intro
			#port
				img.parallax-layer(src='/images/design/parallax_drops/3.png', alt='', style='width:1486px; height:850px;')
				img.parallax-layer(src='/images/design/parallax_drops/3.png', alt='', style='width:1286px; height:850px;')
				img.parallax-layer(src='/images/design/parallax_drops/4.png', alt='', style='width:1331px; height:850px;')
				img.parallax-layer(src='/images/design/parallax_drops/5.png', alt='', style='width:1446px; height:850px;')
				img.parallax-layer(src='/images/design/parallax_drops/6.png', alt='', style='width:1500px; height:850px;')
			.intro_view
				.intro_view_inner
					.intro_text
						.intro_title
							a(href='styles') Виртуальный музей

		.periods
			each age in ages
				.period
					.period_title=age.i18n.title.get('ru')
					.period_line
						.period_line_inner
					.period_dates
						.date0=age.meta.interval.start.getUTCFullYear()
						.date2=age.meta.interval.end.getUTCFullYear()