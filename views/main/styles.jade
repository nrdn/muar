extends ../layout

block title
	title МУАР | СТИЛИ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/styles.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/js/styles.js' + version)

block content_title
	.navigate_block
		.navigate_styles_block
			each age in ages
				.navigate_style_block
					.navigate_style_title= age.main.i18n.title.get('ru')
					.navigate_style_progress
					.navigate_style_ages
						each age_sub in age.sub
							.navigate_age= age_sub.age.i18n.title.get('ru')

block content
	.styles_block
		.styles_inner
			each age in ages
				.style_block
					.style_block_inner
						.style_inner_height
							.style_header
								.style_line
								.style_title= age.main.i18n.title.get('ru')
							.style_description: != age.main.i18n.description.get('ru')
							each age_sub in age.sub
								.age_block
									.age_header
										.age_line
										.age_title= age_sub.age.i18n.title.get('ru')
									.age_description: != age_sub.age.i18n.description.get('ru')
									.age_objects
										each object in age_sub.objects
											a.object_block(href='/objects/' + object._id, style='background-image:url(' + object.images[0].thumb + ')')
												.object_description
													.object_description_inner
														.object_title=object.title[0].value
														.object_date=object.interval.start.getUTCFullYear() + ' - ' + object.interval.end.getUTCFullYear()
