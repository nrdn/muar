extends ../../layout

block title
	title РЕДАКТИРОВАТЬ ПОСТ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	- var year = new Date()
	- year = year.getFullYear()
	- var months = ['ЯНВАРЬ', 'ФЕВРАЛЬ', 'МАРТ', 'АПРЕЛЬ', 'МАЙ', 'ИЮНЬ', 'ИЮЛЬ', 'АВГУСТ', 'СЕНТЯБРЬ', 'ОКТЯБРЬ', 'НОЯБРЬ', 'ДЕКАБРЬ']
	.form_block
		a.back_link(href='/auth/eras') < Назад
		.title РЕДАКТИРОВАТЬ СТИЛЬ
		form(action="", method="post")
			.form_title Название:
			input.ru(type="text", name="ru[title]", value=era.title.ru)
			input.en(type="text", name="en[title]", disabled)
			.form_title Описание:
			textarea.ru(name="ru[description]", rows="8",)= era.description.ru
			textarea.en(name="en[description]", rows="8", disabled)
			.form_title Интервал начало:
			input.ru(type="text", name="interval[start]", value=era.interval.start.getUTCFullYear())
			.form_title Интервал конец:
			input.ru(type="text", name="interval[end]", value=era.interval.end.getUTCFullYear())
			.form_title Периоды:
			each age in era.ages
				.snake
					button.back(type='button') удалить
					input(type="text", name="ages[title][]", placeholder="Название", value=age.title.ru)
					input(type="text", name="ages[interval][start][]", placeholder="Начало", value=age.interval.start.getUTCFullYear())
					input(type="text", name="ages[interval][end][]", placeholder="Конец", value=age.interval.end.getUTCFullYear())
			br
			button(type='button').forward добавить период
			//- .form_title Фото:
			//- input(type="file", name="photo")
			br
			br
			input(type='submit', value='отправить')