extends ../../layout

block title
	title РЕДАКТИРОВАТЬ ПЕРИОД

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')
	script(type='text/javascript', src='/build/js/edit_era.js')

block content
	.form_block
		a.back_link(href='../') < Назад
		.title РЕДАКТИРОВАТЬ ПЕРИОД
		form(action="", method="post")
			.form_title Название:
			input.ru(type="text", name="ru[title]", value=age.title.ru)
			input.en(type="text", name="en[title]", disabled)
			.form_title Описание:
			textarea.ru(name="ru[description]", rows="8",)= age.description.ru
			textarea.en(name="en[description]", rows="8", disabled)
			.form_title Интервал начало:
			input.ru(type="text", name="interval[start]", value=age.interval.start.getUTCFullYear())
			.form_title Интервал конец:
			input.ru(type="text", name="interval[end]", value=age.interval.end.getUTCFullYear())
			br
			br
			input(type='submit', value='сохранить')