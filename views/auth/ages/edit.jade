extends ../../layout

block title
	title РЕДАКТИРОВАТЬ ПЕРИОД

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	.form_block
		a.back_link(href='../') < Назад
		.title РЕДАКТИРОВАТЬ ПЕРИОД
		form(action="", method="post", enctype="multipart/form-data")
			.form_title Название:
			input.ru(type="text", name="ru[title]", value=age.i18n.title.get('ru'))
			input.en(type="text", name="en[title]", disabled, value=age.i18n.title.get('en'))
			.form_title Название (Дополнительное):
			textarea.ru(type="text", name="ru[title_sub]",  value=age.i18n.title_sub.get('ru'))
			textarea.en(type="text", name="en[title_sub]", disabled, value=age.i18n.title_sub.get('en'))
			.form_title Описание:
			textarea.ru(name="ru[description]", rows="8",)= age.i18n.description.get('ru')
			textarea.en(name="en[description]", rows="8", disabled)= age.i18n.description.get('en')
			.form_title Описание (Вводное):
			textarea.ru(name="ru[description_alt]", rows="8",)= age.i18n.description_alt.get('ru')
			textarea.en(name="en[description_alt]", rows="8", disabled)= age.i18n.description_alt.get('en')
			.form_title Интервал начало:
			input(type="text", name="interval[start]", value=age.meta.interval.start.getUTCFullYear())
			.form_title Интервал конец:
			input(type="text", name="interval[end]", value=age.meta.interval.end.getUTCFullYear())
			.form_title Архив:
			input(type="text", name="archive[position]", value=age.meta.archive.position)
			.form_title Изображение:
			input(type='file', name='photo')
			br
			br
			input(type='submit', value='сохранить')
			button.toggle_eng(type='button') перевод