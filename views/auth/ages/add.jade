extends ../../layout

block title
	title ДОБАВИТЬ ПЕРИОД

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	.form_block
		a.back_link(href='/auth/ages') < Назад
		.title ДОБАВИТЬ ПЕРИОД
		form(action="", method="post", enctype="multipart/form-data")
			.form_title Название:
			input.ru(type="text", name="ru[title]",)
			input.en(type="text", name="en[title]", disabled)
			.form_title Название (Дополнительное):
			input.ru(type="text", name="ru[title_sub]",)
			input.en(type="text", name="en[title_sub]", disabled)
			.form_title Описание:
			textarea.ru(name="ru[description]", rows="8",)
			textarea.en(name="en[description]", rows="8", disabled)
			.form_title Описание (Вводное):
			textarea.ru(name="ru[description_alt]", rows="8",)
			textarea.en(name="en[description_alt]", rows="8", disabled)
			.form_title Интервал начало:
			input(type="text", name="interval[start]",)
			.form_title Интервал конец:
			input(type="text", name="interval[end]",)
			.form_title Архив:
			input(type="text", name="archive[position]")
			.form_title Изображение:
			input(type='file', name='photo')
			br
			br
			input(type='submit', value='отправить')
			button.toggle_eng(type='button') перевод