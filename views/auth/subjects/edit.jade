extends ../../layout

block title
	title РЕДАКТИРОВАТЬ ЕДИНИЦУ ХРАННЕНИЯ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/add.css')

block content_scripts
	script(type='text/javascript', src='/build/js/add.js')

block content
	.form_block
		a.back_link(href='/auth/objects') < Назад
		.title РЕДАКТИРОВАТЬ ЕДИНИЦУ ХРАННЕНИЯ
		form(action="", method="post", enctype="multipart/form-data")
			.form_title Заголовок:
			input.ru(type="text", name="ru[title]", value=subject.i18n.title.get('ru'))
			input.en(type="text", name="en[title]", disabled, value=subject.i18n.title.get('en'))
			.form_title Описание:
			textarea.ru(name="ru[description]", rows="8",)= subject.i18n.description.get('ru')
			textarea.en(name="en[description]", rows="8", disabled,)=subject.i18n.description.get('en')
			.form_title Вид:
			select(name='view[tag]')
				option(value='plan') План
				option(value='front') Фасад
				option(value='perspective') Аксонометрия
				option(value='general_view') Общий вид
				option(value='master_plan') Генеральный план
				option(value='panorama') Панорама
				option(value='main_front') Главный фасад
				option(value='short_form') Малая форма
				option(value='sculpture') Скульптура
				option(value='interior') Интерьер
				option(value='part') Деталь
				option(value='other') Другое
			br
			input.ru(type="text", name="ru[view][comment]", placeholder='Комментарий к виду', value=subject.meta.view.i18n.comment.get('ru'))
			input.en(type="text", name="en[view][comment]", placeholder='Comment view', disabled, value=subject.meta.view.i18n.comment.get('en'))
			.form_title Техника:
			select(name='technique[tag]')
				option(value='plan') Гравюра
				option(value='front') Литография
				option(value='perspective') Фотография
				option(value='general_view') Чертеж
				option(value='master_plan') Живопись
				option(value='panorama') Рисунок
				option(value='main_front') Скульптура
				option(value='short_form') Макет
				option(value='other') Другое
			br
			input.ru(type="text", name="ru[technique][comment]", placeholder='Комментарий к технике', value=subject.meta.technique.i18n.comment.get('ru'))
			input.en(type="text", name="en[technique][comment]", placeholder='Comment technique', disabled, value=subject.meta.technique.i18n.comment.get('en'))
			.form_title Материал:
			input.ru(type="text", name="ru[material]", value=subject.meta.i18n.material.get('ru'))
			input.en(type="text", name="en[material]", disabled, value=subject.meta.i18n.material.get('en'))
			.form_title Размер:
			input.ru(type="text", name="ru[size]", value=subject.meta.i18n.size.get('ru'))
			input.en(type="text", name="en[size]", disabled, value=subject.meta.i18n.size.get('en'))
			.form_title Жанр:
			input.ru(type="text", name="ru[genre]", value=subject.meta.i18n.genre.get('ru'))
			input.en(type="text", name="en[genre]", disabled, value=subject.meta.i18n.genre.get('en'))
			.form_title Инвентарный номер:
			input(type="text", name="inventory", value=subject.meta.inventory)
			.form_title Интервал начало:
			input(type="text", name="interval[start]", value=subject.meta.interval.start.getUTCFullYear())
			.form_title Интервал конец:
			input(type="text", name="interval[end]", value=subject.meta.interval.end.getUTCFullYear())
			.form_title Изображение:
			input(type="file", name="image")
			br
			br
			input(type='submit', value='отправить')
			button.toggle_eng(type='button') перевод