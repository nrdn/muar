doctype html
html
	block paths
	head
		include header
	body
		- var date = new Date()
		include counters
		.header_block
			.sub_header_block
				.header_block_inner
					.header_block_menu
						a.header_logo(href="/")
						.logo_description= __('Государственный музей архитектуры имени А. В. Щусева')
						.menu_navigate_block
							- if (session.user_id)
								a(href='/auth') ЗВЕЗДОЧЕТ
							//-a(href='/') Главная
							a.styles_btn.m_item.menu_styles(href='/#styles')= __('Периоды')
							a.m_item.menu_special(href='/#projects')= __('Спецпроекты')
							a.m_item.menu_arch(href='/architects')= __('Архитекторы')
							a.m_item.menu_subjects(href='/subjects')= __('Коллекция музея')
							a.m_item.menu_term(href='/categorys')= __('Термины')
						.menu_block
							.menu_item.search 
							//- if (locale == 'ru')
								a.menu_item.lang(href='/lang/en') 
							//- else
								a.menu_item.lang(href='/lang/ru') 
				block header_submenu
		.content_title_block
			- if (admin)
				a(href='/auth') ЗВЕЗДОЧЕТ
				a(href='/auth/ages') Стили
				a(href='/auth/objects') Объекты
				a(href='/auth/projects') Спецпроекты
				a(href='/auth/architects') Архитекторы
				a(href='/auth/categorys') Термины
				a(href='/auth/print') Печать
			block content_title
		.content_search_block
			.search_inner
				.search_block
					.search_cross
					.search_title= __('Найти:')
					input.search_field(type='text', placeholder='...')
					.search_result
						.objects_context
							.context_title= __('Объекты:')
							.context_results_block
						.architects_context
							.context_title= __('Архитекторы:')
							.context_results_block
						.subjects_context
							.context_title= __('Единицы хранения:')
							.context_results_block
		.content_block
			block content
		.footer_block
			.footer_block_inner
				.footer_content_block
					block footer
				.footer_sponsors_block
					a.sponsor_info(href='http://culture.ru' + ref, target='_blank',)= __('Культура.рф')
					a.sponsor_info(href='http://muar.ru', target='_blank')= __('Музей архитектуры имени А.В. Щусева')
					span.sponsor_date &copy; 2015
				.nrdn_block
					span.nrdn_type Дизайн и разработка —
					a(href='http://nrdn.ru', target='_blank').nrdn_name Народный архитектор